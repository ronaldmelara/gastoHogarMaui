             x:Class="gastosHogar.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Label 
            Text=""
            x:Name="txtMainSaldo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


            <Button
                x:Name="btnCapital"
                Text="Capital"
